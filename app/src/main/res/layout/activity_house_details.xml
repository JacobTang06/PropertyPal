<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/house_details_image"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            tools:src="@drawable/brightness_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/house_details_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:text="$500,000"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/house_details_image"
            app:layout_constraintStart_toStartOf="@id/house_details_image" />

        <TextView
            android:id="@+id/house_details_bed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4 bds |"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/house_details_price_textview"
            app:layout_constraintTop_toBottomOf="@id/house_details_price_textview" />

        <TextView
            android:id="@+id/house_details_bath_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="2.5 ba |"
            android:textSize="18sp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintStart_toEndOf="@id/house_details_bed_textview"
            app:layout_constraintTop_toTopOf="@id/house_details_bed_textview" />

        <TextView
            android:id="@+id/house_details_sqft_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="1500 sqft"
            android:textSize="18sp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintStart_toEndOf="@id/house_details_bath_textview"
            app:layout_constraintTop_toTopOf="@id/house_details_bed_textview" />

        <TextView
            android:id="@+id/house_details_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            tools:text="FOR SALE"
            app:layout_constraintTop_toTopOf="@id/house_details_price_textview"
            app:layout_constraintEnd_toEndOf="@id/house_details_image"/>

        <TextView
            android:id="@+id/house_details_address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1550 Fraser Dr, Sunnyvale, CA"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/house_details_bed_textview"
            app:layout_constraintStart_toStartOf="@id/house_details_bed_textview" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/love_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.65"/>

        <TextView
            android:id="@+id/house_listing_agent_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Listing Agent: Tyler Smith"
            app:layout_constraintTop_toBottomOf="@id/house_details_address_textview"
            app:layout_constraintEnd_toEndOf="@id/house_details_status_textview"/>

        <TextView
            android:id="@+id/house_listing_agent_company_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginVertical="5dp"
            tools:text="Company: Compass"
            app:layout_constraintEnd_toEndOf="@id/house_listing_agent_textview"
            app:layout_constraintTop_toBottomOf="@id/house_listing_agent_textview"/>

        <TextView
            android:id="@+id/house_summary_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            tools:text="Description: This super great home..."
            app:layout_constraintTop_toBottomOf="@id/house_listing_agent_company_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>